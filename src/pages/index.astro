---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import PostPreview from '../components/PostPreview.astro';
import Footer from '../components/Footer.astro';

import { getBlogPosts } from '../utils/posts';

const title = 'Vlad Esafev';
const description = 'Not causing trouble, not touching anything, fixing the primus';
const link = import.meta.env.SITE;
---

<html lang="en">
  <head>
    <Head {title} {description} {link} />
  </head>

  <body>
    <Header />
    <main>
      {getBlogPosts().map((p) => <PostPreview post={p} />)}
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    margin: 3em 0;
  }
</style>
