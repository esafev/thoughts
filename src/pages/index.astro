---
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';
import Notes from '@/components/Notes.astro';
import Footer from '@/components/Footer.astro';
import LastUpdated from '@/components/LastUpdated.astro';
import Intro from '@/components/Intro.astro';

const title = 'Vlad Esafev';
const description = 'Not causing trouble, not touching anything, fixing the primus';
const link = import.meta.env.SITE;
---

<html lang="en">
  <head>
    <Head {title} {description} {link} />
  </head>

  <body>
    <Header {title} />
    <main>
      <Intro />
      <Notes />
    </main>
    <Footer>
      <LastUpdated />
    </Footer>
  </body>
</html>

<style>
  main {
    margin: 3em 0;
  }
</style>
